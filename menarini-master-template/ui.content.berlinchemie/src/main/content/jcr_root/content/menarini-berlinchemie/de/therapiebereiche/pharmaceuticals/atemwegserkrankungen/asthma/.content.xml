                            layout="responsiveGrid">
                            <text_384432172
                                cq:styleIds="[1686561136649]"
                                jcr:created="{Date}2024-01-31T15:41:52.095Z"
                                jcr:createdBy="m.papini@adiacent.com"
                                jcr:lastModified="{Date}2024-02-07T08:35:32.374Z"
                                jcr:lastModifiedBy="l.giuntini@adiacent.com"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="menarinimaster/components/text"
                                text="&lt;p>Asthma kann in &lt;b>jedem Alter erstmals&lt;/b> auftreten, die Beschwerden müssen aber nicht ein Leben lang anhalten.&lt;sup>3&lt;/sup> Ca. die Hälfte der Betroffenen, bei denen Asthma im Kindesalter oder in der Jugend auftritt, haben im Erwachsenalter keine typischen Asthmabeschwerden mehr. Dennoch können die Atemwege ohne spürbare Beschwerden krankhaft verändert sein.&lt;sup>3&lt;/sup> Asthma kann aber auch erst im Erwachsenenalter auftreten.&lt;sup>3&amp;nbsp;&lt;/sup>Diese Asthmaform ist seltener mit einer Allergie verbunden, sondern z. B. mit einer chronischen Nasennebenhöhlenentzündung.&lt;sup>3&lt;/sup> Im Verlauf der Asthma-Erkrankung kann es immer wieder zu Asthmaanfällen mit akuter Atemnot und zu sogenannten Asthma-Exazerbationen kommen.&lt;sup>3&lt;/sup>&lt;/p>&#xd;&#xa;"
                                textIsRich="true">
